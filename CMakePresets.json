{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "wincubeclt_default",
            "inherits": "default",
            "description": "Default windows config using the STM32CubeCLT",
            "toolchainFile": "${sourceDir}/wincubeclt-gcc.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "hidden": true
        },
        {
            "name": "debug",
            "description": "Default Debug Config",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "description": "Default Release Config",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "card",
            "displayName": "Card base config",
            "cacheVariables": {
                "TYPE": "CARD"
            },
            "hidden": true
        },
        {
            "name": "controller",
            "displayName": "Controller base config",
            "cacheVariables": {
                "TYPE": "CONTROLLER"
            },
            "hidden": true
        },

        {
            "name": "controller0",
            "displayName": "Controller Rev0 base config",
            "inherits": [
                "wincubeclt_default",
                "controller"
            ],
            "cacheVariables": {
                "BOARD": "F446",
                "REV": "0"
            },
            "hidden": true
        },
        {
            "name": "controller0_debug",
            "displayName": "Controller Rev 0 Debug",
            "inherits": [
                "controller0",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/controller/0",
            "description": "Debug build for controller rev 0 (F446)"
        },
        {
            "name": "controller0_release",
            "displayName": "Controller Rev 0 Release",
            "inherits": [
                "controller0",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/controller/0",
            "description": "Release build for controller rev 0 (F446)"
        },



        {
            "name": "controller1",
            "displayName": "Controller Rev1 base config",
            "inherits": [
                "wincubeclt_default",
                "controller"
            ],
            "cacheVariables": {
                "BOARD": "G0C1",
                "REV": "1"
            },
            "hidden": true
        },
        {
            "name": "controller1_debug",
            "displayName": "Controller Rev 1 Debug",
            "inherits": [
                "controller1",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/controller/1",
            "description": "Debug build for controller rev 1 (G0C1)"
        },
        {
            "name": "controller1_release",
            "displayName": "Controller Rev 1 Release",
            "inherits": [
                "controller1",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/controller/1",
            "description": "Release build for controller rev 1 (G0C1)"
        },



        {
            "name": "card0",
            "displayName": "Card Rev0 base config",
            "inherits": [
                "wincubeclt_default",
                "card"
            ],
            "cacheVariables": {
                "BOARD": "G431",
                "REV": "0"
            },
            "hidden": true
        },
        {
            "name": "card0_debug",
            "displayName": "Card Rev 0 Debug",
            "inherits": [
                "card0",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/card/0",
            "description": "Debug build for card rev 0 (G431)"
        },
        {
            "name": "card0_release",
            "displayName": "Card Rev 0 Release",
            "inherits": [
                "card0",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/card/0",
            "description": "Release build for card rev 0 (G431)"
        },



        {
            "name": "card1",
            "displayName": "Card Rev 1 base config",
            "inherits": [
                "wincubeclt_default",
                "card"
            ],
            "cacheVariables": {
                "BOARD": "L071",
                "REV": "1"
            },
            "hidden": true
        },
        {
            "name": "card1_debug",
            "displayName": "Card Rev 1 Debug",
            "inherits": [
                "card1",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/card/1",
            "description": "Debug build for card rev 1 (L071)"
        },
        {
            "name": "card1_release",
            "displayName": "Card Rev 1 Release",
            "inherits": [
                "card1",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/card/1",
            "description": "Release build for card rev 1 (L071)"
        },



        {
            "name": "card2",
            "displayName": "Card Rev 2 base config",
            "inherits": [
                "wincubeclt_default",
                "card"
            ],
            "cacheVariables": {
                "BOARD": "L071",
                "REV": "2"
            },
            "hidden": true
        },
        {
            "name": "card2_debug",
            "displayName": "Card Rev 2 Debug",
            "inherits": [
                "card2",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/card/2",
            "description": "Debug build for card rev 2 (L071)"
        },
        {
            "name": "card2_release",
            "displayName": "Card Rev 2 Release",
            "inherits": [
                "card2",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/card/2",
            "description": "Release build for card rev 2 (L071)"
        }
    ],
    "buildPresets": [
        {
            "name": "controller0_debug",
            "displayName": "Controller Rev 0 Debug",
            "configurePreset": "controller0_debug"
        },
        {
            "name": "controller0_release",
            "displayName": "Controller Rev 0 Release",
            "configurePreset": "controller0_release"
        },
        {
            "name": "controller1_debug",
            "displayName": "Controller Rev 1 Debug",
            "configurePreset": "controller1_debug"
        },
        {
            "name": "controller1_release",
            "displayName": "Controller Rev 1 Release",
            "configurePreset": "controller1_release"
        },
        {
            "name": "card0_debug",
            "displayName": "Card Rev 0 Debug",
            "configurePreset": "card0_debug"
        },
        {
            "name": "card0_release",
            "displayName": "Card Rev 0 Release",
            "configurePreset": "card0_release"
        },
        {
            "name": "card1_debug",
            "displayName": "Card Rev 1 Debug",
            "configurePreset": "card1_debug"
        },
        {
            "name": "card1_release",
            "displayName": "Card Rev 1 Release",
            "configurePreset": "card1_release"
        },
        {
            "name": "card2_debug",
            "displayName": "Card Rev 2 Debug",
            "configurePreset": "card2_debug"
        },
        {
            "name": "card2_release",
            "displayName": "Card Rev 2 Release",
            "configurePreset": "card2_release"
        }
    ]
}