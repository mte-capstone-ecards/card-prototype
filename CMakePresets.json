{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "wincubeclt_default",
            "inherits": "default",
            "description": "Default windows config using the STM32CubeCLT",
            "toolchainFile": "${sourceDir}/wincubeclt-gcc.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "hidden": true
        },
        {
            "name": "debug",
            "description": "Default Debug Config",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "description": "Default Release Config",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "nucleo_f446",
            "displayName": "Nucleo F446 base config",
            "cacheVariables": {
                "BOARD": "F446",
                "TYPE": "CONTROLLER"
            },
            "hidden": true
        },
        {
            "name": "nucleo_g431",
            "displayName": "Nucleo G431 base config",
            "cacheVariables": {
                "BOARD": "G431",
                "TYPE": "CARD"
            },
            "hidden": true
        },
        {
            "name": "card_rev1_l071",
            "displayName": "Card Revision 1 base config (L071)",
            "cacheVariables": {
                "BOARD": "L071",
                "TYPE": "CARD"
            },
            "hidden": true
        },
        {
            "name": "controller_g0c1",
            "displayName": "Controller Revision 1 base config (G0C1)",
            "cacheVariables": {
                "BOARD": "G0C1",
                "TYPE": "CONTROLLER"
            },
            "hidden": true
        },
        {
            "name": "card_rev1_l071",
            "displayName": "Card Revision 1 base config (L071)",
            "cacheVariables": {
                "BOARD": "L071",
                "TYPE": "CARD"
            },
            "hidden": true
        },
        {
            "name": "nucleof446_debug",
            "displayName": "Debug Nucleo F446",
            "inherits": [
                "wincubeclt_default",
                "nucleo_f446",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/F446",
            "description": "Debug build for Nucleo F446 configuration"
        },
        {
            "name": "nucleof446_release",
            "displayName": "Release Nucleo F446",
            "inherits": [
                "wincubeclt_default",
                "nucleo_f446",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/F446",
            "description": "Release build for Nucleo F446 configuration"
        },
        {
            "name": "nucleog431_debug",
            "displayName": "Debug Nucleo G431",
            "inherits": [
                "wincubeclt_default",
                "nucleo_g431",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/G431",
            "description": "Debug build for Nucleo G431 configuration"
        },
        {
            "name": "nucleog431_release",
            "displayName": "Release Nucleo G431",
            "inherits": [
                "wincubeclt_default",
                "nucleo_g431",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/G431",
            "description": "Release build for Nucleo G431 configuration"
        },
        {
            "name": "cardrev1l071_debug",
            "displayName": "Debug Card Rev1",
            "inherits": [
                "wincubeclt_default",
                "card_rev1_l071",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/L071",
            "description": "Debug build for Card Rev 1 w/ L071 configuration"
        },
        {
            "name": "cardrev1l071_release",
            "displayName": "Release Card Rev1",
            "inherits": [
                "wincubeclt_default",
                "card_rev1_l071",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/L071",
            "description": "Release build for Card Rev 1 w/ L071 configuration"
        },
        {
            "name": "controllerg0c1_debug",
            "displayName": "Debug Controller",
            "inherits": [
                "wincubeclt_default",
                "controller_g0c1",
                "debug"
            ],
            "binaryDir": "${sourceDir}/Debug/G0C1",
            "description": "Debug build for Controller (G0C1)"
        },
        {
            "name": "controllerg0c1_release",
            "displayName": "Release Controller",
            "inherits": [
                "wincubeclt_default",
                "controller_g0c1",
                "release"
            ],
            "binaryDir": "${sourceDir}/Release/G0C1",
            "description": "Release build for Controller (G0C1)"
        }
    ],
    "buildPresets": [
        {
            "name": "Debug Nucleo F446",
            "displayName": "Debug Nucleo F446",
            "configurePreset": "nucleof446_debug"
        },
        {
            "name": "Release Nucleo F446",
            "displayName": "Release Nucleo F446",
            "configurePreset": "nucleof446_release"
        },
        {
            "name": "Debug Nucleo G431",
            "displayName": "Debug Nucleo G431",
            "configurePreset": "nucleog431_debug"
        },
        {
            "name": "Release Nucleo G431",
            "displayName": "Release Nucleo G431",
            "configurePreset": "nucleog431_release"
        },
        {
            "name": "Debug Card Rev 1",
            "displayName": "Debug Card Rev 1",
            "configurePreset": "cardrev1l071_debug"
        },
        {
            "name": "Release Card Rev 1",
            "displayName": "Release Card Rev 1",
            "configurePreset": "cardrev1l071_release"
        },
        {
            "name": "Debug Controller",
            "displayName": "Debug Controller",
            "configurePreset": "controllerg0c1_debug"
        },
        {
            "name": "Release Controller",
            "displayName": "Release Controller",
            "configurePreset": "controllerg0c1_release"
        }
    ]
}