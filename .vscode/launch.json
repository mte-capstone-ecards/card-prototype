{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "STLink Debug",
            "type": "cortex-debug",
            "request": "launch",
            "executable": "${command:cmake.launchTargetPath}",
            "svdFile": "${command:cmake.getLaunchTargetDirectory}/device.svd",
            "servertype": "stlink"
        },
        {
            "name": "Sim Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Strawberry/c/bin/gdb.exe",
            "program": "${command:cmake.launchTargetPath}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ]
        },
}